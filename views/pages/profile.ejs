    <div class="page-header">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
    </div>

    <div class="row">
        <div class="col-md-4 pb-4">

            <div class="card">
                <% if(user.facebook.picturUrl) { %>
                <img class="card-img-top" src="<%= user.facebook.picturUrl %>" alt="Facebook Image">
                <% } %>
                <div class="card-body">
                    <h5 class="card-title"><span class="fa fa-user"></span> Profile</h5>
                    <p class="card-text">
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>name</strong>: <%= user.profile.name %><br>
                        <strong>email</strong>: <%= user.profile.email %><br>
                        <strong>phone</strong>: <%= user.profile.phonenumber %><br>
                        <strong>gender</strong>: <%= user.profile.gender %><br>
                        <strong>birthday</strong>: <%= user.profile.birthday %><br>

                        <strong>location</strong>: <%= user.profile.location %><br>
                    </p>
                </div>
            </div>

        </div>
        <div class="col-md-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><span class="fa fa-key"></span> Local</h5>
                    <p class="card-text">
                    <% if (user.local.email) { %>
                        <p>
                            <strong>email</strong>: <%= user.local.email %><br>
                            <strong>password</strong>: <%= user.local.password %>
                        </p>

                        <a href="/unlink/local" class="btn btn-secondary">Unlink</a>
                    <% } else { %>
                        <a href="/connect/local" class="btn btn-secondary">Connect Local</a>
                    <% } %>
                    </p>
                </div>
            </div>

        </div>

        <div class="col-md-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><span class="fab fa-facebook"></span> Facebook</h5>
                    <p class="card-text">
                    <% if (user.hasFacebook()) { %>
                        <p>
                            <strong>id</strong>: <%= user.facebook.id %><br>
                            <strong>token</strong>: <%= user.facebook.token %><br>
                            <strong>email</strong>: <%= user.facebook.email %><br>
                            <strong>name</strong>: <%= user.facebook.name %><br>
                        </p>

                        <a href="/unlink/facebook" class="btn btn-primary">Unlink</a>
                    <% } else { %>
                        <a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                    <% } %>
                    </p>
                </div>
            </div>

        </div>

        <div class="col-md-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><span class="fab fa-twitter"></span> Twitter</h5>
                    <p class="card-text">
                    <% if (user.hasTwitter()) { %>
                        <p>
                            <strong>id</strong>: <%= user.twitter.id %><br>
                            <strong>token</strong>: <%= user.twitter.token %><br>
                            <strong>display name</strong>: <%= user.twitter.displayName %><br>
                            <strong>username</strong>: <%= user.twitter.username %>
                        </p>

                        <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
                    <% } else { %>
                        <a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
                    <% } %>
                    </p>
                </div>
            </div>

        </div>

        <div class="col-md-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><span class="fab fa-google-plus"></span> Google+</h5>
                    <p class="card-text">
                    <% if (user.hasGoogle()) { %>
                        <p>
                            <strong>id</strong>: <%= user.google.id %><br>
                            <strong>token</strong>: <%= user.google.token %><br>
                            <strong>email</strong>: <%= user.google.email %><br>
                            <strong>name</strong>: <%= user.google.name %>
                        </p>

                        <a href="/unlink/google" class="btn btn-danger">Unlink</a>
                    <% } else { %>
                        <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                    <% } %>
                    </p>
                </div>
            </div>

        </div>


    </div>
   