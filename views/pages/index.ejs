<div class="jumbotron">
    <h1><span class="fa fa-lock"></span> Login</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-success btn-lg">Login</button>
    </form><br>

    <a href="/login" class="btn btn-secondary"><span class="fa fa-user"></span> Local Login</a>
    <a href="/signup" class="btn btn-secondary"><span class="fa fa-user"></span> Local Signup</a>
    <a href="/auth/facebook" class="btn btn-primary"><span class="fab fa-facebook"></span> Facebook</a>
    <a href="/auth/twitter" class="btn btn-info"><span class="fab fa-twitter"></span> Twitter</a>
    <a href="/auth/google" class="btn btn-danger"><span class="fab fa-google-plus"></span> Google+</a>
</div>