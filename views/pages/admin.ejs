<div class="page-header">
	<h1><span class="fa fa-users"></span> Profiles</h1>
</div>

<% if(message.length > 0) { %>
	<div class="alert alert-info" role="alert">
  		<%= message %>
	</div>
<% } %>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Phone</th>
			<th scope="col">Email</th>
			<th scope="col">Gender</th>
			<th scope="col">Birthday</th>
			<th class="text-center" scope="col">Active</th>
			<th class="text-center" scope="col"><i class="fas fa-key"></i></th>
			<th class="text-center" scope="col"><i class="fab fa-facebook"></i></th>
			<th class="text-center" scope="col"><i class="fab fa-twitter"></i></th>
			<th class="text-center" scope="col"><i class="fab fa-google-plus"></i></th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		<% users.forEach(function(user){ %>
		<tr>
			<td><%= user.profile.name %></td>
			<td><%= user.profile.phonenumer %></td>
			<td><%= user.profile.email %></td>
			<td><%= user.profile.gender %></td>
			<td><%= user.profile.birthdayLocal %></td>
			<td class="text-center"><%- user.profile.isActive ? '<i class="far fa-check-square"></i>' : '<i class="far fa-square"></i>' %></td>
			<td class="text-center"><%- user.hasLocal() ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>'  %></td>
			<td class="text-center"><%- user.hasFacebook() ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>' %></td>
			<td class="text-center"><%- user.hasTwitter() ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>'  %></td>
			<td class="text-center"><%- user.hasGoogle() ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>'  %></td>
			<td>
				<div class="btn-group" role="group">
					<button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cog"></i></button>
					<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
						<a class="dropdown-item" href="/admin/user/delete/<%= user._id %>" onClick="return confirm('You are deleting a user - Are you sure?')"><i class="fas fa-trash-alt"></i> Delete</a>
						<a class="dropdown-item" href="#"><i class="fas fa-edit"></i> Edit</a>
						<a class="dropdown-item" href="#"><i class="fas fa-user-circle"></i>  Impersonate</a>
					</div>
				</div>
			</td>
		</tr>
		<% }); %>
	</tbody>


</table>